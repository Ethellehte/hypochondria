<div class="container">
  <div class="row align-items-center justify-content-center">
    <div class="col-md-6 col-md-offset=3">
      <h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.input :first_name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.input :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :date_of_birth,  class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :blood_type, as: :select, collection: User.blood_types.keys.to_a, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :rhesus_factor,  class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :brief_information,  class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :allergy,  class: "form-control" %>
  </div>

    <%= f.submit "Sign up", class: "btn btn-primary centered_button" %>
<% end %>
    </div>
  </div>
  <div class="centered_links">
    <%= render "devise/shared/links" %>
  </div>

</div>
