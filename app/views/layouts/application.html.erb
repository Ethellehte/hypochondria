<!DOCTYPE html>
<html>
  <head>
    <title>Hyp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to "Hypohondria", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
      <li class="nav-item dropdown menu">
      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Account
      </a>
      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <%= link_to "Add Entry", new_entry_path, class: "dropdown-item" %>
        <div class="dropdown-divider"></div>
        <%= link_to "My entries", entries_path, class: "dropdown-item" %>
        <div class="dropdown-divider"></div>
        <%= link_to "Add Measurment Category", new_measurment_category_path, class: "dropdown-item" %>
        <div class="dropdown-divider"></div>
          <%= link_to "My measurments categories", measurment_categories_path, class: "dropdown-item" %>
        <div class="dropdown-divider"></div>
        <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
      </div>
        <li class="nav-item">
          <%= link_to "Log Out", destroy_user_session_path, method: 'delete', class: "nav-link" %>
        </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Sing In", new_user_session_path, class: "nav-link" %>
      </li>
        <li class="nav-item">
          <%= link_to "Sing Up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
        </ul>
  </div>
</nav>
  <!-- <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p> -->
    <%= yield %>
  </body>
</html>
